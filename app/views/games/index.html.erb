<h1>Partite</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.title %></td>
        <td><%= game.date.strftime("%-d/%-m/%Y, %H:%M") %></td>
        <td><%= link_to 'Mostra', game %></td>
        <td><%= link_to 'Modifica', edit_game_path(game) %></td>
        <td><%= link_to 'Elimina', game, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

