<p id="notice"><%= notice %></p>

<h1>Rounds</h1>

<table>
  <thead>
    <tr>
      <th>Numero del round</th>
      <th>Partita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rounds.each do |round| %>
      <tr>
        <td><%= round.number %></td>
        <td><%= round.game.title %></td>
        <td><%= link_to 'Mostra', round %></td>
        <td><%= link_to 'Modifica', edit_round_path(round) %></td>
        <td><%= link_to 'Elimina', round, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo round', new_round_path %>
