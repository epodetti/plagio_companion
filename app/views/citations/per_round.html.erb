<p id="notice"><%= notice %></p>

<h1>Citazioni del round @current_round della partita @current_game</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citations.each do |citation| %>
      <tr>
        <td><%= link_to 'Mostra', citation %></td>
        <td><%= link_to 'Modifica', edit_citation_path(citation) %></td>
        <td><%= link_to 'Elimina', citation, method: :delete, data: { confirm: 'Sei sicuro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuova Citazione', new_citation_path %>
